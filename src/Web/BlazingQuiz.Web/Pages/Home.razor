@page "/"

@inject QuizAuthStateProvider QuizAuthStateProvider

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorizing>
        <p>Autorizando</p>
    </Authorizing>
    <NotAuthorized>
        <p>Não autorizado</p>
    </NotAuthorized>
    <Authorized>
        <p>Autorizado: @context.User.Claims.FirstOrDefault(claim => claim.Type == ClaimTypes.Name)?.Value</p>
    </Authorized>
</AuthorizeView>
